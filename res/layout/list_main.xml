<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--
        <ImageView
        android:id="@+id/list_main_iv_post"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />
    -->

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="192dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_main_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_element_4dp"
            android:layout_marginTop="@dimen/activity_element_4dp"
            android:fontFamily="sans-serif-light"
            android:text="Sample Title Overe Here"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/list_main_tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="SampleSource"
            android:textColor="?android:textColorSecondaryInverse"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/list_main_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_element_4dp"
            android:fontFamily="sans-serif-light"
            android:text="eg. one hour ago"
            android:textColor="?android:textColorSecondaryInverse"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>